<div class='container border rounded'>
<form class="px-4 py-3" action="/usersignup" method="POST" id="form-container">
  <div class="form-group">
    <label for="exampleDropdownFormUsername1">Username</label>
    <input type="text" class="form-control" id="exampleDropdownFormEmail1" name="username" placeholder="jonsnow">
  </div>
  <div class="form-group">
    <label for="exampleDropdownFormPassword1">Password</label>
    <input type="password" class="form-control" id="exampleDropdownFormPassword1" name="password" placeholder="password">
  </div>
  <div class="form-group">
    <div class="form-check">
      <label for="user-type">Who are you?</label>

      <select id="user-type" name="role">
          <option value="">--Please choose an option--</option>
          <option value="Music Lover">Music Lover</option>
          <option value="Artist">Artist</option>
          <option value="Hosting Venue">Hosting Venue</option>
      </select>
    </div>
  </div>
    {{#if message}}
      <div class="error-message">{{ message }}</div>
    {{/if}}
    <div class="text-center">
     <button type="submit" class="btn btn-primary" value="Sign Up">Sign Up</button>
    </div>
</form>
</div>
